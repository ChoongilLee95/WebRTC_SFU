doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        <link rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css"> 
    body 
        header
            h1 NOOM
        main
            div#welcome
                form 
                    input(placeholder="room name", required, type="text")
                    button enter room;
            div#call
                div#myStream
                    h2 welcome to Noom
                    button#mute mute
                    button#camera camera Off
                    video#myFace(autoplay,playsinline,height = "300px")
                    select#cameras
                    button#quit 나가기
                div#peersStream
                    video#peersFace1(autoplay,playsinline,height = "300px") 
                    video#peersFace2(autoplay,playsinline,height = "300px") 
                    video#peersFace3(autoplay,playsinline,height = "300px") 
                    video#peersFace4(autoplay,playsinline,height = "300px") 

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app2.js")